        android:theme="@style/Theme.HealthAppAuth"
        tools:targetApi="31">

        <activity
            android:name=".RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyHealth"
            android:exported="false" />
        <activity
            android:name=".CalorieCalculator"
            android:exported="false" />
        <activity
            android:name=".SleepTimeCalculator"
            android:exported="false" />
        <activity
            android:name=".BMIcalculator"
            android:exported="false" />
        <activity
            android:name=".AddMealActivity"
            android:exported="false" />
        <activity
            android:name=".EditMealActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".StepCounter"
            android:exported="false" />
        <activity
            android:name=".MyFitnessMain"
            android:exported="false" >
        </activity>
        <activity
            android:name=".AddTrActivity"
            android:exported="false" />
        <activity
            android:name=".TrainersActivity"
            android:exported="false" />
        <activity
            android:name=".AddExActivity"
            android:exported="false" />

        <activity
            android:name=".AddDay"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainActivityDay"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
